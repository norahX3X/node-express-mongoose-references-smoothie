<html>
  <head>
    <link rel="stylesheet" href="/app.css">
  </head>
  <body> 
    <h1>All Smoothies Recipes </h1>
    <nav>
      <a href="/smoothies/new">Make New Smoothie Recipe</a>
    </nav>
    
    <ul>
    <% for (i in smoothies) { %>
      <li>
      <a href="/smoothies/<%= smoothies[i]._id  %>"><%= smoothies[i].name %></a>
      <form action="/smoothies/<%= smoothies[i]._id  %>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE"/>
      </form>
        </li>
        
        <% } %>
    </ul>
    </body>
</html>
